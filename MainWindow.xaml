<Window x:Class="Beatbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beatbox"
        mc:Ignorable="d"
        Title="Beatbox - The Ultimate Damage-Dealer" Height="350" Width="800"
        x:Name="MainFrame" ContentRendered="Window_ContentRendered">
    <DockPanel>
        <!-- Menu bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Reset Points" />
                <MenuItem Header="Hard Reset" />
            </MenuItem>
            <MenuItem Header="Info">
            </MenuItem>
        </Menu>
        <!-- Shows information when leveled up or points available -->
        <Grid DockPanel.Dock="Bottom" x:Name="StatusBar">
            <ProgressBar x:Name="XPBar" Height="20" Minimum="0" Maximum="100"/>
            <TextBlock Text="{Binding ElementName=XPBar, Path=Value, StringFormat=Current Progress: {0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
        <!-- Main part of the frame -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.20*" />
                <ColumnDefinition Width="Auto" MinWidth="400" />
                <ColumnDefinition Width="0.2*" />
            </Grid.ColumnDefinitions>
            <!-- left column -->
            <Grid Grid.Column="0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- fill in as many lines as needed -->
                    <RowDefinition/>
                    <RowDefinition Height="5"/>
                    <RowDefinition/>
                    <RowDefinition Height="5"/>
                    <RowDefinition/>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- left, labels -->
                <Label Content="Attack Power:" Grid.Column="0" Grid.Row="1"/>
                <Label Content="Critical Rating:" Grid.Column="0" Grid.Row="3"/>
                <Label Content="Haste Rating:" Grid.Column="0" Grid.Row="5"/>
                <Label Content="Current damage/sec:" Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="2"/>
                <Label Content="Maximum damage yet:" Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="2"/>
                <Label Content="Current attack rate:" Grid.Column="0" Grid.Row="11" Grid.ColumnSpan="2"/>
                <!-- center, values -->
                <Label x:Name="ValueAP" Content="0" Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Right"/>
                <Label x:Name="ValueCR" Content="0" Grid.Column="1" Grid.Row="3" HorizontalContentAlignment="Right"/>
                <Label x:Name="ValueHR" Content="0" Grid.Column="1" Grid.Row="5" HorizontalContentAlignment="Right"/>
                <!-- right, buttons -->
                <Button x:Name="IncrBttnAP" Content="Increase" Grid.Column="2" Grid.Row="1" Click="IncreaseAP"/>
                <Button x:Name="IncrBttnCR" Content="Increase" Grid.Column="2" Grid.Row="3" Click="IncreaseCR"/>
                <Button x:Name="IncrBttnHR" Content="Increase" Grid.Column="2" Grid.Row="5" Click="IncreaseHR"/>
                <Label x:Name="CurrentDamageValue" Content="0" Grid.Column="2" Grid.Row="8" HorizontalContentAlignment="Right"/>
                <Label x:Name="MaxDamageValue" Content="0" Grid.Column="2" Grid.Row="10" HorizontalContentAlignment="Right"/>
                <Label x:Name="AttackRateValue" Content="0" Grid.Column="2" Grid.Row="12" HorizontalContentAlignment="Right"/>
            </Grid>
            <!-- center column -->
            <Grid Grid.Column="1">
                <Grid>
                    
                </Grid>
            </Grid>
            <!-- right column -->
            <Grid Grid.Column="2" x:Name="LogFrame">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Button Content="Start" Grid.Column="0" Grid.Row="0" Click="StartBeatbox"/>
                    <Button Content="Stop" Grid.Column="1" Grid.Row="0" Click="StopBeatbox"/>
                    <ScrollViewer x:Name="ScrollViewer" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                        <TextBlock x:Name="Log" Text="" TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
