<Window x:Class="Beatbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beatbox"
        mc:Ignorable="d"
        Title="Beatbox - The Ultimate Damage-Dealer" Height="350" Width="800"
        x:Name="MainFrame">
    <DockPanel>
        <!-- Menu bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Reset Points" />
                <MenuItem Header="Hard Reset" />
            </MenuItem>
            <MenuItem Header="Info">
            </MenuItem>
        </Menu>
        <!-- Shows information when leveled up or points available -->
        <Grid DockPanel.Dock="Bottom" x:Name="StatusBar">
            <Label Content="You leveld up!" HorizontalContentAlignment="Center"/>
        </Grid>
        <!-- Main part of the frame -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.20*" />
                <ColumnDefinition Width="Auto" MinWidth="400" />
                <ColumnDefinition Width="0.2*" />
            </Grid.ColumnDefinitions>
            <!-- left column -->
            <Grid Grid.Column="0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- fill in as many lines as needed -->
                    <RowDefinition/>
                    <RowDefinition Height="5"/>
                    <RowDefinition/>
                    <RowDefinition Height="5"/>
                    <RowDefinition/>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                    <RowDefinition Height="5"/>
                    <RowDefinition/>
                    <RowDefinition Height="5"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- left, labels -->
                <Label Content="Attack Power:" Grid.Column="0" Grid.Row="1"/>
                <Label Content="Critical Rating:" Grid.Column="0" Grid.Row="3"/>
                <Label Content="Haste Rating:" Grid.Column="0" Grid.Row="5"/>
                <Label Content="Current damage:" Grid.Column="0" Grid.Row="7"/>
                <Label Content="Maximum damage done:" Grid.Column="0" Grid.Row="9"/>
                <Label Content="Current attack rate:" Grid.Column="0" Grid.Row="11"/>
                <!-- center, values -->
                <Label x:Name="ValueAP" Content="0" Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Right"/>
                <Label x:Name="ValueCR" Content="0" Grid.Column="1" Grid.Row="3" HorizontalContentAlignment="Right"/>
                <Label x:Name="ValueHR" Content="0" Grid.Column="1" Grid.Row="5" HorizontalContentAlignment="Right"/>
                <!-- right, buttons -->
                <Button x:Name="IncrBttnAP" Content="Increase" Grid.Column="2" Grid.Row="1"/>
                <Button x:Name="IncrBttnCR" Content="Increase" Grid.Column="2" Grid.Row="3"/>
                <Button x:Name="IncrBttnHR" Content="Increase" Grid.Column="2" Grid.Row="5"/>
                <Label Content="0" Grid.Column="2" Grid.Row="7" HorizontalContentAlignment="Right"/>
                <Label Content="0" Grid.Column="2" Grid.Row="9" HorizontalContentAlignment="Right"/>
                <Label Content="0" Grid.Column="2" Grid.Row="11" HorizontalContentAlignment="Right"/>
            </Grid>
            <!-- center column -->
            <Grid Grid.Column="1">
                <Button Content="Action" />
            </Grid>
            <!-- right column -->
            <Grid Grid.Column="2" x:Name="LogFrame">
                <TextBlock Text="Log" TextWrapping="Wrap"/>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
